#include <stdio.h>
#include <stdlib.h>
#include "calculos.h"
#include "funcionesUTNyMenu.h"

int main(void) {
	setbuf(stdout, NULL);
	int A;
	int B;
	int opcionPrincipal;
	int respuestaMenuPrincipal;
	int opcionCalculos;
	int respuestaMenuCalculos;
	int resultadoSuma;
	int resultadoResta;
	int resultadoMultiplicacion;
	int resultadoDivision;

	do{

		if(respuestaMenuPrincipal == 0)
		{
			switch(opcionPrincipal)
			{
			case 1:
				printf("Ingrese el primer operando A");
				scanf("%d", &A);
				break;
			case 2:
				printf("Ingrese el primer operando B");
				scanf("%d", &B);
				break;
			case 3:
				respuestaMenuCalculos = utn_getNumero(&opcionCalculos, "Seleccione una opcion\n1-Calcular la suma (A+B)\n2-Calcular la resta (A-B)\n3-Calcular la division (A/B)\n4-Calcular la multiplicacion (A*B)\n5-Calcular el factorial (A!)\n","\nError, no es una opcion valida", 1, 5, 2);
				if(respuestaMenuCalculos==0)
				{
					switch(opcionCalculos)
					{
					case 'a':
						sumar(&resultadoSuma, A, B);
						break;
					case 'b':
						restar(&resultadoResta, A, B);
						break;
					case 'c':
						multiplicar(&resultadoMultiplicacion, A, B);
						break;
					case 'd':
						dividir(&resultadoDivision, A, B);
						break;
					case 'e':

						break;
					}
				}
				break;
			case 4:

				break;
			}

		}
		respuestaMenuPrincipal = utn_getNumero(&opcionPrincipal,"Seleccione una opcion\n1-Ingresar primer operando(A=x)\n2-Ingresar segundo operando(B=y)\n3-Calcular todas las operaciones\n4-Informar resultado\n5-Salir\n","No es una opcion valida", 1, 5, 2);
	}while(opcionPrincipal!=5);

	return EXIT_SUCCESS;
}
